---
import Section from "@/components/section.astro";
import { TESTIMONIAL } from "@/const/testimonial";
import Star from "@/assets/iconos/star.svg";
---

<Section>
  <div class="space-y-8">
    <div class="flex flex-col items-center justify-center space-y-4">
      <h2 class="font-bold text-scondary text-2xl md:text-5xl text-balance">
        Historias de Ã©xito
      </h2>
      <p class="text-gray-50 text-wrap">
        Conoce las experiencias de nuestros miembros
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {
        TESTIMONIAL.map(({ id, name, rating, text }) => (
          <div class="bg-gray-800/50 border-gray-700 border-1 rounded-lg">
            <div class="p-6 space-y-4">
              <div class="flex space-x-4">
                {[...Array(rating)].map((_, i) => (
                  <Star class="h-5 w-5 fill-scondary text-scondary" />
                ))}
              </div>
              <p class="text-slate-50 text-wrap italic">{text}</p>
              <div class="flex items-center space-x-4">
                <img
                  src={`/all-image/avatars/${id}.avif`}
                  alt={name}
                  class="size-12 rounded-full object-cover"
                />
                <div>
                  <h3 class="font-semibold text-scondary text-xl">{name}</h3>
                  <p class="text-gray-400">
                    <small>Miembro de GoldenGym</small>
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Section>
