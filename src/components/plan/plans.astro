---
import Section from "@/components/section.astro";
import { PLANS } from "@/const/plans";
import Check from "@/assets/iconos/check.svg";
import X from "@/assets/iconos/x.svg";
---

<Section>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 text-gray-50">
    {
      PLANS.map(
        ({
          name,
          subtitle,
          image,
          color,
          borderColor,
          popular,
          price,
          features,
          benefits,
        }) => (
          <div
            class={`relative overflow-hidden bg-gray-900/50 border-2 ${borderColor} rounded-lg ${popular ? "lg:scale-105 shadow-2xl shadow-scondary/20" : ""} `}
          >
            {popular && (
              <div class="absolute -right-12 top-6 rotate-45 bg-scondary px-12 py-1 text-center text-sm font-bold text-primary italic">
                POPULAR
              </div>
            )}
            {/* card */}
            <div class="p-8">
              <div class="mb-6 text-center">
                <div
                  class={`mx-auto mb-4 flex size-16 items-center justify-center rounded-full bg-gradient-to-r ${color}`}
                >
                  <image.icon class="size-8 text-gray-50" />
                </div>
                <h3 class="mb-2 text-2xl font-bold text-balance text-gray-50">
                  {name}
                </h3>
                <p class="text-gray-400 text-pretty">{subtitle}</p>
              </div>

              <div class="mb-6 text-center">
                <div class="mb-2">
                  <span class="text-4xl font-bold text-scondary">${price}</span>
                  <span class="text-gray-400 text-sm">/mes</span>
                </div>
              </div>

              <ul class="mb-8 space-y-3">
                {features.map(({ name, included }) => (
                  <li class="flex items-center space-x-3">
                    {included ? (
                      <Check class="size-5 text-green-400" />
                    ) : (
                      <X class="size-5 text-gray-500" />
                    )}
                    <span class={included ? "text-gray-50" : "text-gray-500"}>
                      {name}
                    </span>
                  </li>
                ))}
              </ul>

              <div class="mb-6">
                <h4 class="mb-3 font-semibold text-scondary">
                  Beneficios incluidos:
                </h4>
                <ul class="space-y-1 text-sm text-gray-300">
                  {benefits.map((benefit) => (
                    <li class="flex items-center">
                      <div class="mr-2 size-1.5 rounded-full bg-scondary" />
                      {benefit}
                    </li>
                  ))}
                </ul>
              </div>

              <button
                class={`w-full ${popular ? "bg-scondary text-primary hover:bg-golden" : "bg-gray-700 text-gray-5 hover:bg-gray-600"} transition-colors duration-300 font-semibold rounded-lg px-4 py-2`}
              >
                {popular ? "Elegir plan popular" : "Seleccionar plan"}
              </button>
            </div>
          </div>
        ),
      )
    }
  </div>
</Section>
