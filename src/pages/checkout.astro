---
import Layout from "@/layouts/Layout.astro";

import Section from "@/components/section.astro";
import Users from "@/assets/iconos/users.svg";
import MapPin from "@/assets/iconos/map-pin.svg";
import Phone from "@/assets/iconos/phone.svg";
---

<Layout>
  <Section>
    <div class="mb-8 text-center">
      <h1 class="mb-4 text-4xl font-bold text-scondary text-balance">
        Filnalizar Inscripción
      </h1>
      <p class="text-xl text-gray-300">
        Completa tu inscripción para uniter a <strong>GoldenGym</strong>
      </p>
    </div>
    <div class="grid grid-cols-3 gap-4">
      <!-- formulario -->
      <div class="lg:col-span-2">
        <form class="space-y-8 w-full">
          <!-- datos presonales -->
          <div class="p-6 bg-gray-900/50 border-2 border-gray-700 rounded-lg">
            <div class="flex items-center text-scondary mb-6">
              <Users class="size-5 mr-2" />
              Información Personal
            </div>
            <div class="space-y-4">
              <div class="grid gap-4 md:grid-cols-2">
                <div>
                  <label>Nombre *</label>
                  <input
                    type="text"
                    name="firstName"
                    required
                    placeholder="Tu nombre"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div>
                  <label>Apellido *</label>
                  <input
                    type="text"
                    name="lastName"
                    required
                    placeholder="Tu apellido"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div>
                  <label>Correo *</label>
                  <input
                    type="email"
                    name="email"
                    required
                    placeholder="tu@email.com"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div>
                  <label>Teléfono *</label>
                  <input
                    type="tel"
                    name="phone"
                    required
                    placeholder="+57 (300) 123-4567"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div class="col-span-2">
                  <label class="mb-2 block text-sm font-medium text-gray-300"
                    >Fecha de Nacimiento *</label
                  >
                  <input
                    type="date"
                    name="birthDate"
                    required
                    class="w-full rounded-lg bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 focus:border-scondary focus:outline-none"
                  />
                </div>
              </div>
            </div>
          </div>
          <!-- direccion -->
          <div class="bg-gray-900/50 border-2 border-gray-700 rounded-lg p-6">
            <div>
              <div class="flex items-center text-scondary mb-6">
                <MapPin class="mr-2 size-5" />
                Dirección
              </div>

              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="lg:col-span-3">
                  <label class="mb-2 block text-sm font-medium text-gray-300"
                    >Direccion *</label
                  >
                  <input
                    type="text"
                    name="address"
                    required
                    placeholder="Calle 123"
                    class="w-full rounded-lg bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 focus:border-scondary focus:outline-none"
                  />
                </div>

                <div>
                  <label class="mb-2 block text-sm font-medium text-gray-300"
                    >Ciudad *</label
                  >
                  <input
                    type="text"
                    name="city"
                    required
                    placeholder="Ciudad"
                    class="w-full rounded-lg bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>

                <div>
                  <label class="mb-2 block text-sm font-medium text-gray-300"
                    >Estado *</label
                  >
                  <input
                    type="text"
                    name="state"
                    required
                    placeholder="Estado"
                    class="w-full rounded-lg bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>

                <label class="">
                  <span class="mb-2 block text-sm font-medium text-gray-300"
                    >Código Postal *</span
                  >
                  <input
                    type="text"
                    name="zipCode"
                    required
                    placeholder="Código Postal"
                    class="w-full rounded-lg bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </label>
              </div>
            </div>
          </div>
          <!-- contacto de emergencia -->
          <div class="bg-gray-900/50 border-2 border-gray-700 rounded-lg p-6">
            <div class="flex items-center text-scondary mb-6">
              <Phone class="size-5 mr-2" />
              Contacto de emergencia
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <label>
                <span class="mb-2 block text-sm font-medium text-gray-300"
                  >Nombre completo *</span
                >
                <input
                  type="text"
                  name="emergencyName"
                  required
                  placeholder="Nombre del contacto"
                  class="w-full bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none rounded-lg"
                />
              </label>
              <label>
                <span class="mb-2 block text-sm font-medium text-gray-300"
                  >Teléfono *</span
                >
                <input
                  type="text"
                  name="emergencyPhone"
                  required
                  placeholder="+57 (300) 123-4567"
                  class="w-full bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none rounded-lg"
                />
              </label>
            </div>
          </div>
          <!-- terminos y condiciones -->
          <div class="bg-gray-900/50 border-2 border-gray-700 rounded-lg">
            <div class="p-6 space-y-4">
              <div class="flex items-center space-x-3">
                <input
                  type="checkbox"
                  required
                  class="mt-1 size-4 border-2 border-gray-600 bg-gray-800 text-scondary focus:ring-scondary"
                />
                <label class="text-sm text-gray-300">
                  Acepto los {" "}
                  <a href="#" class="text-scondary hover:underline"
                    >términos y condiciones</a
                  >
                  {" "}
                  del gimnasio *
                </label>
              </div>
              <div class="flex items-center space-x-3">
                <input
                  type="checkbox"
                  required
                  class="mt-1 size-4 border-2 border-gray-600 bg-gray-800 text-scondary focus:ring-scondary"
                />
                <label class="text-sm text-gray-300">
                  Acepto la {" "}
                  <a href="#" class="text-scondary hover:underline"
                    >política de privacidad</a
                  >
                  {" "}
                  y el tratamiento de mis datos *
                </label>
              </div>
            </div>
          </div>
          <button
            type="submit"
            class="w-full bg-scondary text-primary hover:bg-golden transition-colors duration-300 font-bold text-lg px-4 py-2 rounded-lg"
            disabled
          >
            Procesar Pago -
          </button>
        </form>
      </div>

      <div class="lg:col-span-1">
        <div
          class="bg-gray-900/50 border-2 border-gray-700 rounded-lg p-6 sticky top-8"
        >
          <h2>Resumen</h2>
        </div>
      </div>
    </div>
  </Section>
</Layout>
