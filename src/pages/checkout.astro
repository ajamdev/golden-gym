---
import Layout from "@/layouts/Layout.astro";

import Section from "@/components/section.astro";
import Users from "@/assets/iconos/users.svg";
import MapPin from "@/assets/iconos/map-pin.svg";
---

<Layout>
  <Section>
    <div class="mb-8 text-center">
      <h1 class="mb-4 text-4xl font-bold text-scondary text-balance">
        Filnalizar Inscripción
      </h1>
      <p class="text-xl text-gray-300">
        Completa tu inscripción para uniter a <strong>GoldenGym</strong>
      </p>
    </div>
    <div class="grid grid-cols-3 gap-4">
      <!-- formulario -->
      <div class="lg:col-span-2">
        <form class="space-y-8 w-full">
          <!-- datos presonales -->
          <div class="p-6 bg-gray-900/50 border-2 border-gray-700 rounded-lg">
            <div class="flex items-center text-scondary mb-6">
              <Users class="size-5 mr-2" />
              Información Personal
            </div>
            <div class="space-y-4">
              <div class="grid gap-4 md:grid-cols-2">
                <div>
                  <label>Nombre *</label>
                  <input
                    type="text"
                    name="firstName"
                    required
                    placeholder="Tu nombre"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div>
                  <label>Apellido *</label>
                  <input
                    type="text"
                    name="lastName"
                    required
                    placeholder="Tu apellido"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div>
                  <label>Correo *</label>
                  <input
                    type="email"
                    name="email"
                    required
                    placeholder="tu@email.com"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div>
                  <label>Teléfono *</label>
                  <input
                    type="tel"
                    name="phone"
                    required
                    placeholder="+57 (300) 123-4567"
                    class="w-full rounded-lg bg-grayñ800 border-2 border-gray-600 px-4 py-3 text-gray-50 placeholder-gray-400 focus:border-scondary focus:outline-none"
                  />
                </div>
                <div class="col-span-2">
                  <label class="mb-2 block text-sm font-medium text-gray-300"
                    >Fecha de Nacimiento *</label
                  >
                  <input
                    type="date"
                    name="birthDate"
                    required
                    class="w-full rounded-lg bg-gray-800 border-2 border-gray-600 px-4 py-3 text-gray-50 focus:border-scondary focus:outline-none"
                  />
                </div>
              </div>
            </div>
          </div>
          <!-- direccion -->
          <div class="bg-gray-900/50 border-2 border-gray-700 rounded-lg p-6">
            <div>
              <div class="flex items-center text-scondary mb-6">
                <MapPin class="mr-2 size-5" />
                Dirección
              </div>

              <div>hola</div>
            </div>
          </div>
        </form>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-gray-900/50 border-2 border-gray-700 rounded-lg p-6">
          <h2>Resumen</h2>
        </div>
      </div>
    </div>
  </Section>
</Layout>
