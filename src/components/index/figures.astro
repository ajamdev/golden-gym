---
import Section from "@/components/section.astro";
import { STATS } from "@/const/stats";
---

<Section class="bg-scondary">
  <div class="grid grid-cols-2 lg:grid-cols-4 place-items-center gap-5">
    {
      STATS.map(({ image, statsinfo, title }) => (
        <div class="flex flex-col items-center justify-center space-y-2">
          <image.logo class="size-14" />
          <div class="flex flex-col items-center justify-center space-y-1.5">
            <span class="text-4xl font-semibold">{statsinfo}</span>
            <p class="font-semibold">{title}</p>
          </div>
        </div>
      ))
    }
  </div>
</Section>
