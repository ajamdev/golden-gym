---
import Section from "@/components/section.astro";
import { ADD_PLANS } from "@/const/add-plans";
---

<Section>
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold text-scondary text-balance mb-4">
      Servicios Adicionales
    </h2>
    <p class="text-xl text-gray-300 text-wrap">
      Complementa tu membres√≠a con servicios especializados
    </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    {
      ADD_PLANS.map(({ name, image, description, price, duration }) => (
        <div class="bg-gray-800/50 border-2 border-gray-700 hover:border-scondary transition-colors duration-300 rounded-lg">
          <div class="text-center p-6">
            <image.logo class="size-12 mx-auto mb-4 text-scondary" />
            <h3 class="text-lg font-bold text-gray-50 mb-2">{name}</h3>
            <p class="text-gray-400 mb-4 text-wrap text-sm">{description}</p>
            <div class="mb-4">
              <span class="text-2xl font-bold text-scondary">${price}</span>
              <span class="text-gray-400 text-sm">{duration}</span>
            </div>
            <button class="w-full border-2 border-scondary hover:bg-scondary text-scondary hover:text-primary rounded-lg px-4 py-2 font-semibold">
              Contratar
            </button>
          </div>
        </div>
      ))
    }
  </div>
</Section>
